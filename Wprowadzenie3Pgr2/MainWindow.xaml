        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button>1</Button>
        <Button Grid.Column="2" Grid.ColumnSpan="2">2</Button>
        <Button Grid.Row="1" Grid.Column="1">3</Button>
    </Grid>
